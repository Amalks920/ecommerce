            <div class="invalid-feedback">Valid first name is required.</div>
            </div>

            <div class="form-group">
                <label for="exampleInputStock">Stock</label>
                <input type="text" class="form-control" id="exampleInputStock">
            </div>
            <div class="form-group">
                <label for="exampleInputPrice">Price</label>
                <input type="text" class="form-control" id="exampleInputPrice">
            </div>
        <div class="form-group">
            <label for="exampleInputCategory">Category</label>
            <input type="text" class="form-control" id="exampleInputCategory">
        </div>
        
        </form>
         </div>
        </div>
        </div>
    </div>
</section>
