<section>
    <div class="container py-5">
        
        <h1 class="text-center mb-4 lead">Add New Product</h1>

    <div class="container">
        
        <div class="row g-3">
            <div class="col-12">

           
        <form action="/admin/add-products" enctype="multipart/form-data" method="post" novalidate>
        
        <div class="form-group">
            <label for="brandname">Brand Name</label>
