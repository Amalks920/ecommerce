<section id="user-cart" class="mt-5 d-flex align-items-center justify-content-center">
<div class="container cart-container align-items-center justify-content-center rounded p-4">

  {{#each cartProducts}}
    <div class="row border-top">
  
       <div class="col-3 p-2 text-center">
          <img src="product-images/{{this.item._id}}.jpg" alt="boxy shirt" width="50px">
        </div>

        <div class="col-4 p-2 text-center d-grid justify-content-center align-items-center">
          <h4 class="productname">{{this.item.productName}}</h4>
          
        </div>
  
        <div class="col-3 p-1 quantity d-flex justify-content-center align-items-center">
          <button class="btn btn-sm me-3" onclick()>-</button>
          <span >{{this.quantity}}</span>
          <button class="btn btn-sm ms-3">+</button>
        </div>

        <div class="col-2 p-2 mt-3 d-flex align-items-center">
         <p><strong>{{this.item.productPrice}}</strong></p>
         
        </div>
    </div>
    {{/each}}

</div>
</section>